generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id        Int       @id @default(autoincrement())
  cpf       String    @unique
  nome      String
  telefone  String
  veiculos  Veiculo[]
  agendamentos Agendamento[]

  @@map("cliente")
}

model Veiculo {
  id             Int       @id @default(autoincrement())
  placa          String    @unique
  chassi         String    @unique
  modelo         String
  ano            Int
  clienteId      Int?
  agendamentos   Agendamento[]
  
  cliente     Cliente?  @relation(fields: [clienteId], references: [id])
  
  @@map("veiculo")
}

model Agendamento {
  id            Int      @id @default(autoincrement())
  motivo        String
  descricao     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt 
  veiculoId     Int
  clienteId     Int

